<h4>Topics</h4>

<ul class="collection">
  <%= for topic <- @topics do %>
    <li class="collection-item">
      <%= topic.title %>
    </li>
  <% end %>
</ul>

<div class="fixed-action-btn horizontal">
  <%= link to: topic_path(@conn, :new), class: "btn-floating btn-large waves-effect waves-light red" do %>
    <i class="large material-icons">add</i>
  <% end %>
</div>